algoritmo "notas"


var
nota1, nota2, nota3, media : real

inicio
escreval ("digite a primeira nota: ")
leia(nota1)
escreva ("digite a segunda nota: ")
leia(nota2)
escreva ("digite a terceira nota: ")
leia(nota3)

media <- (nota1*0.2) + (nota2*0.3) + (nota3*0.5)
escreva ("a sua média final é: ",media)





fimalgoritmo